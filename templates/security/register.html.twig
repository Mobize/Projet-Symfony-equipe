{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    

{% block content %} 
<div class="container"> 
    <div class="row">  
        <div class="col-md-6 col-md-offset-3"> 
            <h1 class="titre">Inscription</h1>
            {{ form_start(form) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.assoc) }}
            {{ form_row(form.email) }}
            {{ form_row(form.club.nom) }}
            {{ form_row(form.plainPassword) }}
            <div class="form-btn-group text-center">
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div> 
</div>     
{% endblock %}
