{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-12">
            
            {% if(nbsaisons is defined and nbsaisons == false) %}
                <div class="text-center"><h2>Créez votre première saison !*</h2></div>
                <p class="text-center">*Pour bénéficier de toutes fonctionnalités du site:</p>
                <div class="text-center bouton"><p><a class="btn btn-success btn-lg" href="{{ path('app_admin_saison_edit') }}" role="button">Créer ma première saison</a></p></div>
                <hr>
            {% else %}    
                <h2 class="titre">Profil Club : {{ nomClub }}</h2>
                <hr>
                <div class="col-md-12">
                <div class="row">
                
                    {% for club in clubs %}
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>N° d'association :</th>
                                <td>{{ club.assoc }}</td>
                            </tr>
                            <tr>
                                <th>Nom du club :</th>
                                <td>{{ club.nom }}</td>
                            </tr>
                            <tr>
                                <th>Adresse :</th>
                                <td>{{ club.adresseStade }}</td>
                            </tr>
                             <tr>
                                <th>Année de création : </th>
                                <td>{{ club.anneeCreation }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <div class="well">
                        {% if club.logo is not null %}
                          <img src="{{ asset('upload/'~club.logo) }}" width="100px">
                        {% endif %}
                    </div>
                    </div>    
                </div>

               <a type="button" href="{{ path('app_admin_club_edit') }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> Modifier</a>
        </div> 



        {% endfor %}
        {% endif %}
        </div>
    </div>    
</div>            
{% endblock %}
