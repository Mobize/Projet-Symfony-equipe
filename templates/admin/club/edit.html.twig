{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-6 col-md-offset-3">
                        
            <!-- Modification du titre selon création/édition -->
            {% if nomClub is not null %}
                <h1 class="titre">Edition du club : {{ nomClub }}</h1>
            {% else %}    
                <h1 class="titre">Création d'un club</h1>
            {% endif %}
            <hr>
            {{ form_start(form) }}{# ouvre la balise form #}

            {{ form_row(form.nom) }}
            {{ form_row(form.assoc) }}
            {{ form_row(form.anneeCreation) }}
            {{ form_row(form.sigle) }}
            {{ form_row(form.couleurs) }}
            {{ form_row(form.adresseStade) }}
            {{ form_row(form.emailBureau) }}
            {{ form_row(form.telephoneBureau) }}

            {{ form_row(form.logo) }}
             {% if form.vars.value.logo is not null %}
                <p>Image actuelle : <img src="{{ asset('upload/' ~ form.vars.value.logo.filename) }}" width="100px"></p>
                {{ form_row(form.remove_logo) }}
            {% endif %}

            <div class="form-btn-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Enregistrer</button>
                <a href="{{ path('app_admin_club_index') }}" class="btn btn-default"><i class="fa fa-angle-left"></i> Retour</a>
            </div>
            {{ form_end(form) }}{# ferme la balise form #}
        </div>
    </div> 
</div>      
    
{% endblock %}

