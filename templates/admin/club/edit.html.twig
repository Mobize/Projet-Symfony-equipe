{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Edition Clubs</h1>
    {{ form_start(form) }}{# ouvre la balise form #}

    {{ form_row(form.nom)  }}
    
    {{ form_row(form.logo) }}
     {% if form.vars.value.logo is not null %}
        <p>Image actuelle : <img src="{{ asset('upload/' ~ form.vars.value.logo.filename) }}" width="100px"></p>
        {{ form_row(form.remove_logo) }}
    {% endif %}
    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_club_index') }}" class="btn btn-default">Retour</a>
    </div>
    {{ form_end(form) }}{# ferme la balise form #}
{% endblock %}

