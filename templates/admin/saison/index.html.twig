{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-12">     
            <h1>Gestion des saisons<a class="btn btn-primary pull-right" href="{{path('app_admin_saison_edit')}}">Ajouter une saison</a></h1>

            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Id</th>
                    <th>Date de création</th>
                    <th>Date de modification</th>
                    <th>Nom de la saison</th>        
                    <th width="200px"></th>
                </tr>
                {% for saison in saisons %}
                    <tr>
                        <td width="10px">{{ saison.id }}</td>
                        <td width="150px">{{ saison.createdAt|date('d/m/Y h:i:s')}}</td>
                        <td width="10px">{% if saison.updatedAt is not null %}{{ saison.updatedAt|date('d/m/Y h:i:s') }}{% endif %}</td>
                        <td width="150px">{{ saison.nom}}</td>
                        <td>
                            <a href="{{ path('app_admin_saison_edit', {id: saison.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('app_admin_saison_delete', {id: saison.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>  
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune saison créée pour le moment.</td>
                    </tr>                    
                {% endfor %}                  
            </table>
            
        </div>
    </div> 
</div>         
{% endblock %}
