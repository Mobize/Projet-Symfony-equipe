{% extends 'layout.html.twig' %}
  
{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-8 col-md-offset-2">       
            {% if(nbsaisons is defined and nbsaisons == false) %}
                <div class="jumbotron">
                    <h2>Pour accéder à la gestion de vos joueurs, <br>vous devez d'abord créer une saison</h2>
                           
                    <div class="text-center bouton">
                        <p><a class="btn btn-success btn-lg" href="{{ path('app_admin_saison_index') }}" role="button">Créer ma 1ère saison</a></p>
                    </div>
                </div>      
            {% else %}
            <h1>Gestion des joueurs pour la saison {{ NomderniereSaisonClub.nom }}</h1>
            <hr>
            
              <table class="table table-striped table-bordered table-hover">
              <tr>
                  <th>Id</th>
                  <th>Prénom</th>
                  <th>Nom</th>
                  <th>Rue</th>
                  <th>Code postal</th>
                  <th>Ville</th>
                  <th>N° de tél.</th>
                  <th>N° de tél. autre contact</th>
                  <th>Courriel</th>
                  <th>Date de naissance</th>
                  <th>Sexe</th>
                  <th>Photo d'identité</th>
                  <th>Certificat de santé</th>
                  <th>Actions</th>
              </tr>
           {%for joueur in joueurs %}
              <tr>
                      <td>{{ joueur.id }}</td>
                      <td style="color:dodgerblue">prénom</td>
                      <td style="color:dodgerblue">nom</td>
                      <td>{{ joueur.rue }}</td>
                      <td>{{ joueur.cp }}</td>
                      <td>{{ joueur.ville}}</td>
                      <td>{{ joueur.tel1}}</td>
                      <td>{{ joueur.tel2}}</td>
                      <td style="color:dodgerblue">email</td>
                      
                      <td>{{ joueur.dateNaissance|date('d/m/Y')}}</td>
                      <td>{{ joueur.genre}}</td>
                      <td>
                          {% if joueur.image is not null %}
                          <img src="{{ asset('upload/'~joueur.image) }}" width="100px">
                          {% endif %}
                       </td>
                      <td>
                          {% if joueur.certificat is not null %}
                          <a href="{{ asset('upload/'~joueur.certificat) }}">pdf</a>
                          {% endif %}
                       </td>
                        <td> 
                          <a href="{{ path('app_admin_joueur_edit', {id: joueur.id}) }}"
                             class="btn btn-primary">
                           Modifier   
                          </a>
                          <a href="{{ path('app_admin_joueur_delete', {id:joueur.id}) }}" class="btn btn-danger">Supprimer</a>
                      </td>
                  </tr>    
                    {% else %}
                    <tr>
                        <td colspan="14">Aucun joueur créé pour le moment.<br>Cliquer sur le bouton ci-dessus pour en créer un.
                            <a class="btn btn-primary pull-right" href="{{path('app_admin_joueur_edit')}}">Ajouter un joueur</a>
                        </td>
                    </tr>                    
                {% endfor %}  
            </table>
            {% endif %}
        </div>
    </div> 
</div>        
{% endblock %}

