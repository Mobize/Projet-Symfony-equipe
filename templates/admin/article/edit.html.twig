{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
    <div class="container"> 
    <div class="row">  
        <div class="col-md-12">     
            <h1>Cr√©ation d'un article </h1>
            {{  form_start(form) }}
            {{  form_error(form) }}
            {{  form_widget(form) }}
            {% if form.vars.value.image is not null %}
                      <p>
                    <img src="{{ asset('upload/'~form.vars.value.image.filename) }}"
                         width="200px">
                </p>
                {% endif %}
                {{ form_end(form) }}
            <div class="form-btn-group pull-right">
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a href="{{ path('app_admin_article_index') }}" class="btn btn-default">Retour</a>
            </div>
        </div>
    </div> 
</div>    
    
    
{% endblock %}

