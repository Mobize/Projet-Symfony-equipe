{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Edition article</h1>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.description) }}
    {{ form_row(form.category) }}
     <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_article_index') }}" class="btn btn-default">Retour</a>
    </div>
    {{ form_end(form) }}
{% endblock %}