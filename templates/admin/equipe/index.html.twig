{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion des équipes</h1>
    <p>
        <a class="btn btn-primary" href="{{path('app_admin_equipe_edit')}}">Ajouter une équipe</a>
    </p>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th width="200px"></th>
        </tr>
        {% for equipe in equipes %}
            <tr>
                <td width="10px">{{ equipe.id }}</td>
                <td width="150px">{{ equipe.nom}}</td>
                <td><a href="{{ path('app_admin_equipe_edit', {id: equipe.id}) }}" class="btn btn-primary">Modifier</a>
                <a href="{{ path('app_admin_equipe_delete', {id: equipe.id}) }}" class="btn btn-danger">Supprimer</a></td>  
            </tr>
        {% endfor %}    
    </table>
{% endblock %}
