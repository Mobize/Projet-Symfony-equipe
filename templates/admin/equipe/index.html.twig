{% extends 'layout.html.twig' %}

{% block header %}{# Reprend l'affiche de l'image d'accueil et du menu #}
  {{ parent() }}
{% endblock %} 

{% block reduction_image %}{# Affiche l'image d'accueil en taille reduite #}
  {{ parent() }} 
{% endblock %}

{% block index %}{# Vide pour ne pas afficher l'image en grande taille #}
{% endblock %}    


{% block content %}
<div class="container"> 
    <div class="row">  
        <div class="col-md-12">       
            <h1>Gestion des équipes</h1>
            
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#equipe" aria-controls="equipe" role="tab" data-toggle="tab">Equipes du club</a></li>
                <li role="presentation"><a href="#equipeExt" aria-controls="equipeExt" role="tab" data-toggle="tab">Equipes extérieures</a></li>
            </ul>

  <!-- Tab panes -->
  <div class="tab-content">
      
    <!-- TAB 1 -->  
    <div role="tabpanel" class="tab-pane active" id="equipe">
        <h3>Liste des équipes du club<a class="btn btn-primary pull-right" href="{{path('app_admin_equipe_edit')}}">Ajouter une équipe</a></h3>
        <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Id</th>
                    <th>Date de création</th>
                    <th>Date de modification</th>
                    <th>Nom</th>
                    <th width="200px"></th>
                </tr>

                    {% for equipe in equipes %}
                    <tr>
                        <td width="10px">{{ equipe.id }}</td>
                        <td width="150px">{{ equipe.createdAt|date('d/m/Y h:i:s')}}</td>
                        <td width="10px">{{ equipe.updatedAt|date('d/m/Y h:i:s') }}</td>
                        <td width="150px">{{ equipe.nom}}</td>
                        <td width="75px">
                            <a href="{{ path('app_admin_equipe_edit', {id: equipe.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('app_admin_equipe_delete', {id: equipe.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>  
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="5">Aucune équipe créée pour le moment.</td>
                    </tr>                    
                {% endfor %}           
            </table>
            
        </div> <!-- fin tab 1 -->
      
        <!-- TAB 2 -->
        <div role="tabpanel" class="tab-pane" id="equipeExt">
            <h3>Liste des équipes extérieures<a class="btn btn-primary pull-right" href="{{path('app_admin_equipe_edit')}}">Ajouter une équipe extérieure</a></h3>
        <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Id</th>
                    <th>Date de création</th>
                    <th>Date de modification</th>
                    <th>Nom</th>
                    <th width="200px"></th>
                </tr>

                    {% for equipeExt in equipeExts %}
                    <tr>
                        <td width="10px">{{ equipeExt.id }}</td>
                        <td width="150px">{{ equipeExt.createdAt|date('d/m/Y h:i:s')}}</td>
                        <td width="10px">{{ equipeExt.updatedAt|date('d/m/Y h:i:s') }}</td>
                        <td width="150px">{{ equipeExt.nom}}</td>
                        <td width="75px">
                            <a href="{{ path('app_admin_equipe_edit', {id: equipeExt.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('app_admin_equipe_delete', {id: equipeExt.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>  
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="5">Aucune équipe créée pour le moment.</td>
                    </tr>                    
                {% endfor %}           
            </table>
        </div> <!-- fin tab 2-->
  </div>
            
            
            
            
            
            
            
            

            
        </div> <!-- fin col --> 
    </div> <!-- fin row --> 
</div>  <!-- fin contaner -->       
{% endblock %}
